<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.InsertEventView">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="900.0">
         <children>
            <HBox alignment="CENTER" prefHeight="160.0" prefWidth="900.0">
               <children>
                  <Pane prefHeight="160.0" prefWidth="900.0">
                     <children>
                        <Rectangle fx:id="color1" arcHeight="5.0" arcWidth="5.0" fill="#9c9c9ce5" height="29.0" layoutX="5.0" layoutY="50.0" stroke="BLACK" strokeType="INSIDE" width="890.0" />
                        <Rectangle fx:id="color2" arcHeight="5.0" arcWidth="5.0" fill="#e4f267" height="29.0" layoutX="5.0" layoutY="80.0" stroke="BLACK" strokeType="INSIDE" width="890.0" />
                        <Label fx:id="nameLabel" alignment="CENTER" layoutX="5.0" layoutY="50.0" prefHeight="62.0" prefWidth="890.0" text="TEAM NAME">
                           <font>
                              <Font name="Bauhaus 93" size="54.0" />
                           </font>
                        </Label>
                        <ImageView fx:id="logo" fitHeight="136.0" fitWidth="145.0" layoutX="37.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/default/stemma.jpg" />
                           </image>
                        </ImageView>
                        <Label fx:id="name" alignment="CENTER" layoutY="116.0" prefHeight="35.0" prefWidth="900.0" text="NUOVO EVENTO" textAlignment="CENTER" underline="true">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </Pane>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="900.0" spacing="40.0">
               <children>
                  <RadioButton fx:id="rPartita" mnemonicParsing="false" onMouseClicked="#setPartita" text="Partita">
                     <toggleGroup>
                        <ToggleGroup fx:id="scelta" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rAllenamento" mnemonicParsing="false" onMouseClicked="#setAllenamento" text="Allenamento" toggleGroup="$scelta" />
                  <RadioButton fx:id="rGenerico" mnemonicParsing="false" onMouseClicked="#setGenerico" text="Generico" toggleGroup="$scelta" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="900.0" spacing="20.0">
               <children>
                  <Label fx:id="dal" text="Dal*: ">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="inizio" />
                  <Label fx:id="al" text="Al*: ">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="fine" />
               </children>
            </HBox>
            <HBox fx:id="partita" alignment="CENTER" prefHeight="100.0" prefWidth="900.0" spacing="20.0">
               <children>
                  <Label fx:id="nomeAvvLab" text="Nome avversario*:">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nomeAvv" />
               </children>
            </HBox>
            <HBox fx:id="allenamento" alignment="CENTER" prefHeight="100.0" prefWidth="900.0" spacing="20.0">
               <children>
                  <Label fx:id="categoriaLab" text="Categoria*:">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <ChoiceBox fx:id="categoria" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox fx:id="generico" alignment="CENTER" prefHeight="100.0" prefWidth="900.0" spacing="20.0">
               <children>
                  <Label fx:id="descrizioneLab" text="Descrizione generico*:">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="descrizione" />
               </children>
            </HBox>
            <HBox fx:id="crea" alignment="CENTER" prefHeight="100.0" prefWidth="900.0">
               <children>
                  <Button fx:id="inserisci" mnemonicParsing="false" onMouseClicked="#inserisci" text="Crea evento" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
